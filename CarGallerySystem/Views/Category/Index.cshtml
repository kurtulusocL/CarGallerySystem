@model IEnumerable<CarGallerySystem.Entities.Models.Category>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Admin/Index" class="breadcrumb-link">@Session["KullanıcıAdıSoyadı"]</a></li>                           
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    <a href="~/Category/Create" class="btn btn-primary btn-xs">Yeni Kategori Ekle</a>
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Araba Sayısı</th>
                                    @*<th>Sözleşme Sayısı</th>*@
                                    <th>Eklenme Tarihi</th>
                                    <th>Güncellenme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="~/Category/CategoryToCar/@item.Id" class="btn btn-link" target="_blank">@item.Name</a></td>
                                        <td>@item.Cars.Count()</td>
                                        @*<td>
                                            @if (item.Contracts.Count >=0)
                                            {
                                                item.Contracts.Count();
                                            }
                                            else
                                            {
                                                <span>Sözleşme yapılmamış</span>
                                            }
                                        </td>*@
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            @if (item.UpdatedDate != null)
                                            {
                                                item.UpdatedDate.Value.ToShortDateString();
                                            }
                                            else
                                            {
                                                <span>Güncelleme Yapılmadı</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="~/Category/Edit/@item.Id" class="btn btn-success btn-xs">Güncelle</a>
                                            <a href="~/Category/Delete/@item.Id" class="btn btn-danger btn-xs">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Araba Sayısı</th>
                                    @*<th>Sözleşme Sayısı</th>*@
                                    <th>Eklenme Tarihi</th>
                                    <th>Güncellenme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>