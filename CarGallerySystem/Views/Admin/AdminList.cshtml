@using PagedList
@using PagedList.Mvc
@model IPagedList<CarGallerySystem.Data.Identity.ApplicationUser>
@{
    ViewBag.Title = "Sistem Yönetici Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Admin/Index" class="breadcrumb-link">@Session["KullanıcıAdıSoyadı"]</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    <a href="~/Account/Register" class="btn btn-primary btn-xs">Yeni Yönetici Ekle</a> -  <a href="~/Account/RegisterHelper" class="btn btn-info btn-xs">Yeni Yardımcı Ekle</a>
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Adı-Soyadı</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Mail Adresi</th>
                                    <th>Telefon No</th>
                                    <th>Doğum Tarihi</th>
                                    <th>Görevi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameLastname</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Birthdate</td>
                                        <td>@item.RespondTitle</td>
                                        <td>
                                            <a href="~/Account/ChangePassword" class="btn btn-success btn-xs">Şifreyi Değiştir</a>
                                            <a href="~/Admin/Delete/@item.Id" class="btn btn-danger btn-xs">Admini Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Adı-Soyadı</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Mail Adresi</th>
                                    <th>Telefon No</th>
                                    <th>Doğum Tarihi</th>
                                    <th>Görevi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="pagination">
                        <div class="pagination-lg">
                            @Html.PagedListPager(Model, Page => Url.Action("AdminList", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>