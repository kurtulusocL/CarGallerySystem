@using PagedList
@using PagedList.Mvc
@model IPagedList<CarGallerySystem.Entities.Models.Car>
@{
    ViewBag.Title = "Modeline Göre Araç Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">@ViewBag.Title</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Admin/Index" class="breadcrumb-link">@Session["KullanıcıAdıSoyadı"]</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    <a href="~/Brand/Index" class="btn btn-primary btn-xs">Marka Listesi</a>
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Markası</th>
                                    <th>Modeli - Yılı</th>
                                    <th>Kategorisi</th>
                                    <th>Müşteri Sayısı</th>
                                    <th>Sözleşme Sayısı</th>
                                    <th>Eklenme Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Brand.Name</td>
                                        <td>@item.Model.Name - @item.Year</td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.Customers.Count()</td>
                                        <td>@item.Contracts.Count()</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Markası</th>
                                    <th>Modeli - Yılı</th>
                                    <th>Kategorisi</th>
                                    <th>Müşteri Sayısı</th>
                                    <th>Sözleşme Sayısı</th>
                                    <th>Eklenme Tarihi</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="pagination">
                        <div class="pagination-lg">
                            @Html.PagedListPager(Model, Page => Url.Action("ModelToCar", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>