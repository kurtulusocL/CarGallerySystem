@model IEnumerable<CarGallerySystem.Entities.Models.Brand>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
        <div class="card">
            <div class="card-header d-flex">
                <h4 class="mb-0">@item.Name</h4>               
            </div>
            <div class="card-body">
                <p class="card-text">@item.Cars.Count() kayıtlı araba</p>
                <p class="card-text">@item.Customers.Count() kayıtlı müşteri</p>
                <a href="~/Brand/Index" class="btn btn-primary">Marka Listesi</a>
            </div>
        </div>
    </div>
}
