@model CarGallerySystem.Entities.Admin.ChangePassword
@{
    ViewBag.Title = "Yönetici Şifrenizi Değiştirin";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/img/Logo 3.png" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/userpage/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/Content/userpage/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/userpage/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/Content/userpage/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="~/Home/Index"><h4>ocL Araç Galerisi</h4></a><span class="splash-description">@ViewBag.Title</span></div>
            <div class="card-body">
                @Html.ValidationSummary()
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                {
                    <form action="" name="" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input class="form-control form-control-lg" id="username" name="OldPassword" type="password" placeholder="Şifreniz" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" id="password" name="NewPassword" type="password" placeholder="Yeni Şifre Belirleyin">
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" id="password" name="ConfirmNewPassword" type="password" placeholder="Yeni Şifrenizi Tekrar Yazın">
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg btn-block">Şifreyi Değiştir</button>
                    </form>
                }
            </div>
        </div>
    </div>
    <script src="~/Content/userpage/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/userpage/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>
</html>